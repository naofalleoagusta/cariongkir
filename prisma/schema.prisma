generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Subdistricts {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
  name         String   @db.VarChar(100)
  cityId       Int
  cityName     String   @db.VarChar(100)
  provinceId   Int
  type         String   @db.VarChar(20)
  provinceName String   @db.VarChar(100)

  @@index([name, cityName, provinceName])
}

model CourierCosts {
  id                 Int         @id @default(autoincrement())
  courierCode        CourierCode
  courierName        String      @db.VarChar(100)
  originId           Int
  destinationtId     Int
  serviceName        String      @db.VarChar(100)
  serviceDescription String      @db.VarChar(256)
  cost               Float
  estimatedDuration  String      @db.VarChar(24)
  minWeight          Int
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @default(now())

  @@index([destinationtId, originId])
}

enum CourierCode {
  pos
  tiki
  jne
  rpx
  jnt
  sap
  indah
  star
  sicepat
  anteraja
}
