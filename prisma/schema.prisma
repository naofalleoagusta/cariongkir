generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Provinces {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  name      String   @db.VarChar(256)
  cities    Cities[]

  @@unique([id, name])
  @@index([id, name])
}

model Cities {
  id           Int            @id @default(autoincrement())
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now())
  name         String         @db.VarChar(256)
  province     Provinces      @relation(fields: [provinceId], references: [id], onDelete: Cascade)
  type         String
  provinceId   Int
  subdistructs Subdistricts[]

  @@unique([id, name])
  @@index([provinceId, name])
}

model Subdistricts {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  name      String   @db.VarChar(256)
  city      Cities   @relation(fields: [cityId], references: [id], onDelete: Cascade)
  cityId    Int

  @@index([cityId, name])
}

model CourierCosts {
  id                 Int         @id @default(autoincrement())
  courierCode        CourierCode
  courierName        String      @db.VarChar(100)
  originId           Int
  destinationtId     Int
  serviceName        String      @db.VarChar(100)
  serviceDescription String      @db.VarChar(256)
  cost               Float
  estimatedDuration  String      @db.VarChar(24)
  minWeight          Int
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @default(now())

  @@index([courierCode, destinationtId, originId])
}

enum CourierCode {
  pos
  tiki
  jne
  rpx
  jnt
  sap
  indah
  star
  sicepat
  anteraja
}
